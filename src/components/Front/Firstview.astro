---
import cn from "classnames";
const { t, locale } = Astro.props;
---

<div role="banner" class="text-white relative firstview header-bg-none">

  <div class="firstview__content z-20">
    <h2
      class={cn(
        "font-bold z-10 relative animation-from",
        "mb-6 md:mb-10 text-48", /* front.cssのクラスを使用 */
        locale === "en" ? "whitespace-normal mt-6" : "whitespace-pre-line"
      )}
    >
      {t.home.layout_title}
    </h2>

    <p
      class="font-mont font-bold z-10 relative animation-from-2 text-28" 
      style="margin-top: 0;"
    >
      Dream the best dream<br />with the best team
    </p>
  </div>
</div>

<style>
  @reference "tailwindcss";

  .firstview {
    position: relative;
  }

  .firstview__content {
    position: absolute;
    top: clamp(72px, calc(48px + 6vh), 140px);
    left: 0;
    right: 0;
    max-width: 1200px;
    margin-inline: auto;
    padding-inline: 4%;
    text-align: left;
  }

  @media (min-height: 1000px) {
    .firstview__content {
      top: clamp(80px, calc(40px + 5vh), 130px);
    }
  }

  /* アニメーション */
  .animation-from {
    animation: show1 1.5s ease-in-out forwards;
    animation-delay: 0.5s;
    clip-path: inset(0 100% 0 0);
  }
  @keyframes show1 {
    from { clip-path: inset(0 100% 0 0); }
    to { clip-path: inset(0); }
  }

  .animation-from-2 {
    animation: show2 1.5s ease-in-out forwards;
    animation-delay: 2s;
    clip-path: inset(0 100% 0 0);
  }
  @keyframes show2 {
    from { clip-path: inset(0 100% 0 0); }
    to { clip-path: inset(0); }
  }
</style>